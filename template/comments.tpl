              <!-- The time line -->
              <ul class="timeline">
                <!-- timeline item -->
                <li>
                  [profile]<img src="{foto}" class="img-circlecom">[/profile]
                  <div class="timeline-item">
                    <span class="time"><i class="fa fa-clock-o"></i> {date}</span>
                    <h3 class="timeline-header">[aviable=lastcomments]{news_title} - [/aviable]{author} [online]<small><i class="fa fa-circle text-green"></i> Online</small>[/online][offline]<small><i class="fa fa-circle text-red"></i> Offline</small>[/offline]</h3>
                    <div class="timeline-body">
					{comment}
					[signature]<br />--------------------{signature}[/signature]
                    </div>
                    <div class="timeline-footer">
					 <div class="row">
					 <div class="col-md-6 titlecount">
					 [rating]
					  [rating-type-1]{rating}[/rating-type-1]
					  [rating-type-2][rating-plus]<i class="fa fa-thumbs-o-up text-green"></i>[/rating-plus]{rating}[/rating-type-2]
					  [rating-type-3][rating-plus]<i class="fa fa-thumbs-o-up text-green"></i>[/rating-plus]{rating}[rating-minus]<i class="fa fa-thumbs-o-down text-red"></i>[/rating-minus][/rating-type-3]
					  [/rating]
					 </div>
					 <div class="col-md-6 text-right">
					 <div class="comtight">
                     [fast] <i class="fa fa-mail-forward"></i> <em>Ответить</em>[/fast]
                     [spam] <i class="fa fa-exclamation-circle"></i> <em>Спам</em>[/spam]
					 [complaint] <i class="fa fa-warning"></i> <em>Жалоба</em>[/complaint]
					 [com-edit] <i class="fa fa-edit"></i>[/com-edit]
					 [com-del] <i class="fa fa-times"></i>[/com-del]
					 </div>
					 </div>
					 </div>
                    </div>
                  </div>
                </li>
                <!-- END timeline item -->
              </ul>